<?xml version="1.0" encoding="utf-8"?><extension type="module" version="3.0" client="site" method="upgrade">	<name>JHotelSearchFilter</name>	<creationDate>December 2011</creationDate>	<author>CMSJunkie</author>	<copyright>(C) CMSJunkie. All rights reserved.</copyright>	<license>http://www.gnu.org/copyleft/gpl.html</license>	<authorEmail>info@cmsjunkie.com</authorEmail>	<authorUrl>www.cmsjunkie.com</authorUrl>	<version>1.0.0</version>	<description>JHotelreservation - Search Filter</description>	<files>		<filename>mod_jhotelsearchfilter.xml</filename>		<filename module="mod_jhotelsearchfilter">mod_jhotelsearchfilter.php</filename>		<filename>index.html</filename>		<filename>helper.php</filename>		<filename>tmpl/default.php</filename>		<filename>tmpl/index.html</filename>	</files>	<config>		<fields name="params">			<fieldset name="basic">				<field name="type" type="list" default="1"					label="Select Type" description="What information will be shown.">					<option value="facilities#facilityId">Facilities</option>					<option value="regions#regionId">Regions</option>					<option value="types#typeId">Types</option>					<option value="environments#enviromentId">Environment</option>					<option value="accommodation_types#accommodationTypeId">Accommodation Types</option>				</field>			</fieldset>			<fieldset name="advanced">				<field name="layout" type="modulelayout" label="Layout"					description="Layout" />				<field name="moduleclass_sfx" type="text"					label="Module suffix" description="Module class sufix" />			</fieldset>		</fields>	</config></extension>