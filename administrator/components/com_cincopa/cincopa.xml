<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="component" method="upgrade">
	<name>Cincopa</name>
	<version>1.00</version>
	<creationDate>Jan 2010</creationDate>
	<description>Cincopa Bundle</description>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPLv2</license>
	<author>Oren Shmulevich</author>
	<authoremail>oren@cincopa.com</authoremail>
	<authorurl>http://joomla.cincopa.com</authorurl>
	<copyright>Copyright 2010, Oren Shmulevich</copyright>
	<scriptfile>install.php</scriptfile>

    <subinstall>
        <extension type="plugin" client="site" folder="content" dir="plugins/content_plugin" name="cincopa" publish="1" lock="1">Cincopa Plugin</extension>
        <extension type="plugin" client="site" folder="editors-xtd" dir="plugins/editors_xtd_plugin" name="cincopa" publish="1" lock="1">Cincopa Editor Button</extension>
    </subinstall>

	<files folder="site">
		<filename>cincopa.php</filename>
		<filename>controller.php</filename>
		<filename>index.html</filename>
	</files>

	<administration>
		<menu>COM_CINCOPA_MENU</menu>
		<files folder="admin">
			<filename>assets/en-GB.welcome.html</filename>
			<filename>assets/logo.gif</filename>
			<filename>assets/editorbtn.png</filename>
			<filename>cincopa.php</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
		</files>
		<languages folder="admin">
		<language tag="en-GB">language/en-GB.com_cincopa.ini
			</language>
			<language tag="en-GB">language/en-GB.com_cincopa.sys.ini
			</language>
		</languages>
	</administration>

</extension>
